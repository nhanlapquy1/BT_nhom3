<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F2F2"
    android:orientation="horizontal"
    tools:context="VoLap.example.appLoship.View.ProfileUserActivity">

    <LinearLayout
        android:id="@+id/actionbar_pf"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:gravity="center">

        <TextView
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tài khoản Loship"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_thongbao3"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/ic_group_menu" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionbar_pf">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/dndk"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="142dp"
                    android:layout_height="123dp"
                    android:src="@drawable/ic_take_photo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/linkdndk"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="40dp"
                        android:text="Đăng Nhập / Đăng Ký"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chào mừng bạn đến với LoShip"
                        android:textColor="#000"
                        android:textSize="18dp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dndk"
                android:layout_marginTop="1dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_gift" />

                    <LinearLayout
                        android:layout_width="284dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="255dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:text="Giới thiệu Loship cho bạn bè"
                            android:textColor="#000"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:text="Nhận ngay phần thưởng hấp dẫn"
                            android:textColor="#000"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="20dp"

                        android:layout_marginTop="30dp"
                        android:src="@drawable/muiten" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:background="#fff">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_community" />

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Cộng đồng Loship"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/next2"
                        android:layout_width="8dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/muiten" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:background="#fff">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_favorite" />

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Cửa hàng yêu thích"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/muiten" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:background="#fff">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_manager_profile" />

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Quản lí hồ sơ"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/img_QLHS1"
                        android:layout_width="8dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/muiten" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:background="#fff">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_default_payment_method" />

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Quản lí thẻ"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/muiten" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:background="#fff">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_square_question" />

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Câu hỏi thường gặp"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/muiten" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:background="#fff">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_phone" />

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Liên hệ Loship"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/muiten" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:background="#fff">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_update_app" />

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Phiên bản hiên tại 2.21.38"
                        android:textColor="#848484"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:background="#fff">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_phone" />

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="20dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_ProFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorWhite"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />
</RelativeLayout>