<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="VoLap.example.appLoship.View.Login1_Activity">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="656dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:src="@drawable/loship_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center"
            android:text="Chào mừng bạn đến với Loship"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Nhập số điện thoại của bạn để tiếp tục"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="109dp">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/round_border"
                android:gravity="center"
                android:textStyle="bold"
                app:ccpDialog_textColor="#C1BEBE"
                app:ccp_defaultLanguage="VIETNAMESE"
                app:ccp_defaultNameCode="VN"
                app:ccp_defaultPhoneCode="84"
                app:ccp_showNameCode="false"
                app:ccp_textSize="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="7dp"
                android:id="@+id/R_edt_sdt"
                android:layout_width="239dp"
                android:layout_height="89dp"
                android:layout_gravity="center"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:errorEnabled="true"
                app:hintEnabled="true"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login1_sdt"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/round_border"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>
        </GridLayout>


        <Button
            android:id="@+id/bt_continued"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_bg"
            android:text="Tiếp tục"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hoặc"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp" />

        <EditText

            android:id="@+id/infoTxtCredits"
            android:layout_width="413dp"
            android:layout_height="19dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:autoLink="web"
            android:linksClickable="true" />

        <Button
            android:id="@+id/bt_facebook"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@color/cardview_light_background"
            android:drawableStart="@drawable/ic_facebook_link"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Đăng nhập với FACEBOOK"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/link_signup"
            android:layout_width="211dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Điều khoản và sử dụng?"
            android:textColor="@color/colorBlue"
            android:textSize="15sp"
            android:textStyle="italic" />


    </LinearLayout>


</LinearLayout>


